<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.com.didingapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/LoginActivityTheme">
        <activity android:name=".splashActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".main.view.biding_details"
            android:theme="@style/payment" />
        <activity
            android:name=".history.historyActivity"
            android:theme="@style/payment"
            android:screenOrientation="portrait"/>
        <activity android:name=".createbid.imgAuction" />
        <activity
            android:name=".createbid.createBiding"
            android:theme="@style/payment"
            android:screenOrientation="portrait"/>
        <activity android:name=".category.Selectcategory" />

        <activity
            android:name=".history.HistoryTab"
            android:label="History"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.view.dashBoard"
            android:label="@string/title_activity_dash_board"
            android:screenOrientation="portrait"
            android:theme="@style/LoginActivityTheme.NoActionBar" />
        <activity
            android:name=".paymentActivity"
            android:theme="@style/payment" />
        <activity android:name=".otpVerification"
            android:screenOrientation="portrait"/>
        <activity android:name=".signupActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>
